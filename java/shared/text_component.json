{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/SPGoding/minecraft-json-schema-zh_CN/master/java/shared/text_component.json",
    "$ref": "#/definitions/text_component",
    "definitions": {
        "text_component": {
            "anyOf": [
                {
                    "type": "string",
                    "title": "与 {\"text\":\"Value\"} 等价。"
                },
                {
                    "$ref": "#/definitions/text_object"
                },
                {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/text_component"
                    },
                    "title": "与有着 \"extra\":[剩余项目...] 的 [第一个项目] 等价。"
                }
            ]
        },
        "text_object": {
            "type": "object",
            "oneOf": [
                {
                    "properties": {
                        "text": {
                            "type": "string",
                            "title": "直接显示的字符串。"
                        }
                    },
                    "required": [
                        "text"
                    ],
                    "not": {
                        "required": [
                            "translate",
                            "with",
                            "score",
                            "selector",
                            "keybind",
                            "nbt",
                            "interpret"
                        ]
                    }
                },
                {
                    "properties": {
                        "translate": {
                            "type": "string",
                            "title": "定义在资源包内的翻译字符串。"
                        },
                        "with": {
                            "type": "array",
                            "title": "Replacements",
                            "description": "替换翻译字符串中 %s 和 %{x}$s 的项目。这些项目继承了根项目的样式，例如文字颜色、是否斜体等。",
                            "items": {
                                "$ref": "#/definitions/text_component"
                            }
                        }
                    },
                    "required": [
                        "translate"
                    ],
                    "not": {
                        "required": [
                            "text",
                            "score",
                            "selector",
                            "keybind",
                            "nbt",
                            "interpret"
                        ]
                    }
                },
                {
                    "properties": {
                        "score": {
                            "title": "要显示的分数。",
                            "additionalProperties": false,
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "title": "实体选择器或假名等。"
                                },
                                "objective": {
                                    "type": "string",
                                    "title": "记分项。"
                                },
                                "value": {
                                    "type": [
                                        "number",
                                        "string",
                                        "boolean"
                                    ],
                                    "title": "当未找到分数时显示的默认字符串。",
                                    "description": "如果为其他类型，将被自动转换为字符串。"
                                }
                            }
                        }
                    },
                    "required": [
                        "score"
                    ],
                    "not": {
                        "required": [
                            "text",
                            "translate",
                            "with",
                            "selector",
                            "keybind",
                            "nbt",
                            "interpret"
                        ]
                    }
                },
                {
                    "properties": {
                        "selector": {
                            "type": "string",
                            "title": "要显示的实体名或实体选择器。",
                            "description": "如果有多个实体，将会被逗号分割，最后两个实体会被\"和\"分割。"
                        }
                    },
                    "required": [
                        "selector"
                    ],
                    "not": {
                        "required": [
                            "text",
                            "translate",
                            "with",
                            "score",
                            "keybind",
                            "nbt",
                            "interpret"
                        ]
                    }
                },
                {
                    "properties": {
                        "keybind": {
                            "type": "string",
                            "title": "要显示的按键的按键名。",
                            "enum": [
                                "key.attack",
                                "key.use",
                                "key.forward",
                                "key.left",
                                "key.back",
                                "key.right",
                                "key.jump",
                                "key.sneak",
                                "key.sprint",
                                "key.drop",
                                "key.inventory",
                                "key.chat",
                                "key.playerlist",
                                "key.pickItem",
                                "key.command",
                                "key.screenshot",
                                "key.togglePerspective",
                                "key.smoothCamera",
                                "key.fullscreen",
                                "key.spectatorOutlines",
                                "key.swapHands",
                                "key.saveToolbarActivator",
                                "key.loadToolbarActivator",
                                "key.advancements",
                                "key.hotbar.1",
                                "key.hotbar.2",
                                "key.hotbar.3",
                                "key.hotbar.4",
                                "key.hotbar.5",
                                "key.hotbar.6",
                                "key.hotbar.7",
                                "key.hotbar.8",
                                "key.hotbar.9"
                            ]
                        }
                    },
                    "required": [
                        "keybind"
                    ],
                    "not": {
                        "required": [
                            "text",
                            "translate",
                            "with",
                            "score",
                            "selector",
                            "nbt",
                            "interpret"
                        ]
                    }
                },
                {
                    "properties": {
                        "nbt": {
                            "type": "string",
                            "title": "NBT 路径。"
                        },
                        "interpret": {
                            "type": "boolean",
                            "title": "是否将内容视作聊天组件解析。"
                        }
                    },
                    "required": [
                        "nbt"
                    ],
                    "anyOf": [
                        {
                            "properties": {
                                "block": {
                                    "type": "string",
                                    "pattern": "([+-]?\\d+[\\.]?\\d+)\\s([+-]?\\d+[\\.]?\\d+)\\s([+-]?\\d+[\\.]?\\d+)",
                                    "title": "该方块的坐标，格式与 \"/setblock\" 命令中的一致。"
                                }
                            },
                            "required": [
                                "block"
                            ],
                            "not": {
                                "required": [
                                    "entity"
                                ]
                            }
                        },
                        {
                            "properties": {
                                "entity": {
                                    "type": "string",
                                    "title": "实体选择器。"
                                }
                            },
                            "required": [
                                "entity"
                            ],
                            "not": {
                                "required": [
                                    "block"
                                ]
                            }
                        }
                    ],
                    "not": {
                        "required": [
                            "score",
                            "selector",
                            "text",
                            "translate",
                            "with"
                        ]
                    }
                }
            ],
            "additionalProperties": false,
            "properties": {
                "text": {},
                "translate": {},
                "with": {},
                "score": {},
                "selector": {},
                "keybind": {},
                "nbt": {},
                "entity": {},
                "block": {},
                "interpret": {},
                "extra": {
                    "type": "array",
                    "$ref": "#/definitions/text_component",
                    "title": "Additional items to add",
                    "description": "这些项目继承了根项目的样式，例如文字颜色、是否斜体等。"
                },
                "color": {
                    "title": "文字颜色。",
                    "enum": [
                        "black",
                        "dark_blue",
                        "dark_green",
                        "dark_aqua",
                        "dark_red",
                        "dark_purple",
                        "gold",
                        "gray",
                        "dark_gray",
                        "blue",
                        "green",
                        "aqua",
                        "red",
                        "light_purple",
                        "yellow",
                        "white",
                        "reset"
                    ]
                },
                "bold": {
                    "title": "是否加粗。",
                    "type": "boolean"
                },
                "italic": {
                    "title": "是否斜体。",
                    "type": "boolean"
                },
                "underlined": {
                    "title": "是否添加下划线。",
                    "type": "boolean"
                },
                "strikethrough": {
                    "title": "是否添加删除线。",
                    "type": "boolean"
                },
                "obfuscated": {
                    "title": "是否混淆。",
                    "description": "这会使文字在相同宽度的字母间循环显示（仅对英文字母有效，对中文无效）。",
                    "type": "boolean"
                },
                "insertion": {
                    "title": "插入文字。",
                    "description": "当玩家按住 Shift 后点击此文本时，添加到聊天窗口的文字。",
                    "type": "string"
                },
                "clickEvent": {
                    "type": "object",
                    "title": "点击行为。",
                    "description": "当左键点击该文字时执行的行为。",
                    "additionalProperties": false,
                    "properties": {
                        "action": {
                            "oneOf": [
                                {
                                    "enum": [
                                        "open_url"
                                    ],
                                    "description": "打开 value 中储存的网址"
                                },
                                {
                                    "enum": [
                                        "run_command"
                                    ],
                                    "description": "执行 value 中储存的命令，命令需要用 / 开头，否则会直接当作普通文本发出。"
                                },
                                {
                                    "enum": [
                                        "change_page"
                                    ],
                                    "description": "翻书页。"
                                },
                                {
                                    "enum": [
                                        "suggest_command"
                                    ],
                                    "description": "用 value 替换玩家聊天窗口中的内容。"
                                }
                            ],
                            "title": "做什么"
                        }
                    },
                    "value": {
                        "type": "string",
                        "title": "值"
                    }
                },
                "hoverEvent": {
                    "additionalProperties": false,
                    "description": "当玩家鼠标悬浮在该文字上时显示的内容。",
                    "anyOf": [
                        {
                            "type": "object",
                            "title":　"显示文本。",
                            "properties": {
                                "action": {
                                    "type": "string",
                                    "enum": [
                                        "show_text"
                                    ]
                                },
                                "value": {
                                    "anyOf": [
                                        {
                                            "$ref": "#/definitions/text_component"
                                        }
                                    ]
                                }
                            }
                        },
                        {
                            "type": "object",
                            "title":　"显示物品。",
                            "properties": {
                                "action": {
                                    "enum": [
                                        "show_item"
                                    ]
                                },
                                "value": {
                                    "type": "string"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "title":　"显示实体。",
                            "properties": {
                                "action": {
                                    "enum": [
                                        "show_entity"
                                    ]
                                },
                                "value": {
                                    "type": "string"
                                }
                            }
                        }
                    ]
                }
            }
        }
    }
}